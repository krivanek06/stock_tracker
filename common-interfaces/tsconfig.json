{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "sourceMap": false,
    "lib": ["es2017", "es7", "es6", "dom"],
    "strict": true,
    "declaration": true,
    "allowJs": false,
    "noImplicitAny": true,
    "removeComments": true,
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": [
    "src"
, "index.ts"  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
